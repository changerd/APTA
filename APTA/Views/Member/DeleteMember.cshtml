@model APTA.Models.Member

@{
    ViewBag.Title = "Delete Member";
}

<h3>Are you sure you want to delete this Member: <b>@Model.MemberFirstName @Model.MemberLastName</b>?</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-danger" />
        @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-dark" })
    </div>
    <br />
}

