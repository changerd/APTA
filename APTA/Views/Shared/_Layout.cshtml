<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="https://www.apta.asia/" target="_blank">
            <img src="~/Content/img/apta_logo.png" />        
        </a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href=@Url.Action("Index", "Home")>Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href=@Url.Action("Index", "Conference")>Conferences</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href=@Url.Action("Index", "Member")>Members</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href=@Url.Action("Index", "Organization")>Organizations</a>
                </li>
            </ul>            
        </div>
    </div>    
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="text-center">&copy; APTA (Asia Pacific Tourism Association)</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
